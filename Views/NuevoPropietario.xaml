<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Veterinaria.Views.NuevoPropietario">
    <ContentPage.Content>
        <ScrollView>
    <VerticalStackLayout Padding="10" Margin="20" Spacing="5" HorizontalOptions="Center">

        <!-- Encabezado con flecha y logo -->
        <Grid RowDefinitions="Auto,*" Padding="10" Margin="20">
            <Grid Padding="10" VerticalOptions="Start" HorizontalOptions="Fill">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Botón Flecha Izquierda -->
                <Image Source="back1.png"
                       WidthRequest="25"
                       HeightRequest="25"
                       Margin="0"
                       BackgroundColor="Transparent"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"
                       Grid.Column="0">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Cancelar_Clicked"/>
                    </Image.GestureRecognizers>
                </Image>

                <!-- Logo -->
                <Image Source="logovetnegro.png"
                       WidthRequest="170"
                       HeightRequest="80"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Grid.Column="1" />
            </Grid>
        </Grid>

        <!-- Título -->
        <Label Text="NUEVO" FontSize="30" FontAttributes="None" HorizontalOptions="Center" />
        <Label Text="Propietario" FontSize="15" FontAttributes="None" HorizontalOptions="Center" />

        <!-- Nombre -->
        <Label Text="Nombre"
               FontSize="14"
               FontAttributes="Bold"
               TextColor="Black" />
        <Frame BackgroundColor="#E4DFDA" CornerRadius="20" Padding="10" WidthRequest="300">
            <Entry Text="{Binding Nombre}"
                   Placeholder="Nombre"
                   BackgroundColor="Transparent"
                   TextColor="Black" />
        </Frame>

        <!-- Apellido -->
        <Label Text="Apellido"
               FontSize="14"
               FontAttributes="Bold"
               TextColor="Black" />
        <Frame BackgroundColor="#E4DFDA" CornerRadius="20" Padding="10" WidthRequest="300">
            <Entry Text="{Binding Apellido}"
                   Placeholder="Apellido"
                   BackgroundColor="Transparent"
                   TextColor="Black" />
        </Frame>

        <!-- Teléfono -->
        <Label Text="Número de teléfono"
               FontSize="14"
               FontAttributes="Bold"
               TextColor="Black" />
        <Frame BackgroundColor="#E4DFDA" CornerRadius="20" Padding="10" WidthRequest="300">
            <Entry Text="{Binding Num_telefono}"
                   Keyboard="Telephone"
                   Placeholder="Número de teléfono"
                   BackgroundColor="Transparent"
                   TextColor="Black" />
        </Frame>

        <!-- Email -->
        <Label Text="Correo electrónico"
               FontSize="14"
               FontAttributes="Bold"
               TextColor="Black" />
        <Frame BackgroundColor="#E4DFDA" CornerRadius="20" Padding="10" WidthRequest="300">
            <Entry Text="{Binding Email}"
                   Keyboard="Email"
                   Placeholder="Correo electrónico"
                   BackgroundColor="Transparent"
                   TextColor="Black" />
        </Frame>

        <!-- Dirección -->
        <Label Text="Dirección"
               FontSize="14"
               FontAttributes="Bold"
               TextColor="Black" />
        <Frame BackgroundColor="#E4DFDA" CornerRadius="20" Padding="10" WidthRequest="300">
            <Editor Text="{Binding Direccion}"
                    Placeholder="Dirección"
                    BackgroundColor="Transparent"
                    TextColor="Black"
                    AutoSize="TextChanges"
                    HeightRequest="60" />
        </Frame>

        <!-- Fecha de creación -->
        <Label Text="Fecha de creación"
               FontSize="14"
               FontAttributes="Bold"
               TextColor="Black" />
        <Frame BackgroundColor="#E4DFDA" CornerRadius="20" Padding="10" WidthRequest="300">
            <DatePicker Date="{Binding Fecha_creacion}"
                        Visual="None"
                        Format="dd/MM/yyyy"
                        BackgroundColor="Transparent"
                        TextColor="Black" />
        </Frame>

        <!-- Botón Guardar -->
        <Button Text="Guardar"
                BackgroundColor="#F17105"
                FontSize="17"
                CornerRadius="20"
                WidthRequest="100"
                HeightRequest="50"
                TextColor="#F7F7F2"
                Clicked="Guardar_Clicked"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

    </VerticalStackLayout>
</ScrollView>

    </ContentPage.Content>
</ContentPage>