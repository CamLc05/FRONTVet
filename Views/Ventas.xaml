<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Veterinaria.Views.Ventas"
             Title="Ventas"
             BackgroundColor="#F5F5F5">

    <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Logo -->
        <Image Source="logovetnegro.png" WidthRequest="170"
HeightRequest="80" HorizontalOptions="Center" />

            <!-- TÃ­tulo -->
            <Label Text="VENTAS"  
               FontSize="24"  
               HorizontalOptions="Center"  
               TextColor="Black"  
                />

            <!-- Buscador -->
        <Frame BackgroundColor="Transparent" CornerRadius="20" BorderColor="Orange" Padding="0" HeightRequest="50" VerticalOptions="Start">
                <Grid ColumnDefinitions="*,Auto" Padding="5">
                    <Entry x:Name="SearchEntry"  
                   Placeholder="Buscar..."  
                   BackgroundColor="Transparent"  
                   TextColor="Black"  
                   Margin="0,0,0,0"
                  ></Entry>

                    <ImageButton
                    Grid.Column="1"  
                    BackgroundColor="Transparent"  
                    HeightRequest="24"  
                    WidthRequest="24"  
                    VerticalOptions="Center"  
                    HorizontalOptions="Center"  
                    Source="lupa.png" />
                    <!-- Usa el nombre del icono registrado en tu proyecto -->
                </Grid>
            </Frame>

            <!-- Lista de ventas -->
            <CollectionView x:Name="VentasList"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                    <Frame BackgroundColor="#E4DFDA" CornerRadius="15" Padding="10" Margin="0,5">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnVentaTapped" />
                            </Frame.GestureRecognizers>
                            <Grid ColumnDefinitions="*,Auto">
                                <VerticalStackLayout>
                                    <Label Text="{Binding Tipo}" FontAttributes="Bold" FontSize="18" TextColor="Black"/>
                                    <Label Text="{Binding Fecha}" FontSize="14" TextColor="Gray"/>
                                    <Label Text="{Binding Total}" FontSize="14" TextColor="Black"/>
                                </VerticalStackLayout>
                                <ImageButton  
                                         Grid.Column="1"  
                                           
                                         HeightRequest="30"  
                                         WidthRequest="30"  
                                         VerticalOptions="Center"  
                                         HorizontalOptions="End"
                                         Source="info.png"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ContentPage>
