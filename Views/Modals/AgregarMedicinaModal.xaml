<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Veterinaria.Views.Modals.AgregarMedicinaModal"
             BackgroundColor="#FFFFFF"
             Padding="20">
    <VerticalStackLayout Spacing="15">
        <Label Text="Agregar Medicina" FontSize="22" HorizontalOptions="Center"/>
        <Entry x:Name="NombreMedicinaEntry" Placeholder="Nombre de la medicina"/>
        <Entry x:Name="CantidadEntry" Placeholder="Cantidad" Keyboard="Numeric"/>
        <Button Text="Agregar" Clicked="OnAgregarClicked" BackgroundColor="#4CAF50" TextColor="White"/>
        <Button Text="Cancelar" Clicked="OnCancelarClicked" BackgroundColor="#E57373" TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>