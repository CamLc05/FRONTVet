<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Veterinaria.Models"
             x:Class="Veterinaria.Views.Inventario"
             x:Name="PageRef"
             Title="Inventario"
             BackgroundColor="#F5F5F5">
     <ScrollView>
      <VerticalStackLayout Padding="30" Spacing="25">

          <Image
              Source="logovetnegro.png"
              VerticalOptions="Center"
              HorizontalOptions="Center"
              WidthRequest="170"
              HeightRequest="80"
              Margin="0,10,0,5"/>
                
          <Label Text="INVENTARIO" FontSize="30" FontAttributes="None" HorizontalOptions="Center"   Margin="0"/>

          <Label
                Text="Categorías"
                FontSize="18"
                Margin="20,5,120,10"/>
           
            <Grid ColumnSpacing="0" RowSpacing="10" Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" /> <!-- Línea -->
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" /> <!-- Línea -->
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Primera columna -->
                <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center">
                    <Image Source="medicamentos1.png" WidthRequest="50" HeightRequest="50">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SeleccionarCategoriaCommand}" CommandParameter="{x:Static models:TipoProducto.medicamento}" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Label Text="Medicamentos" HorizontalOptions="Center" 
                           FontSize="10"
                           Padding="10"/>
                </VerticalStackLayout>

                <!-- Línea divisoria -->
                <BoxView Grid.Column="1" WidthRequest="0.5" BackgroundColor="Gray" VerticalOptions="Fill" />

                <!-- Segunda columna -->
                <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center">
                    <Image Source="material_quirurgico.png" WidthRequest="50" HeightRequest="50">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SeleccionarCategoriaCommand}" CommandParameter="{x:Static models:TipoProducto.quirurgico}" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Label Text="Material quirúrgico" HorizontalOptions="Center"
                           FontSize="10"
                           Padding="10"/>
                </VerticalStackLayout>

                <!-- Línea divisoria -->
                <BoxView Grid.Column="3" WidthRequest="0.5" BackgroundColor="Gray" VerticalOptions="Fill" />

                <!-- Tercera columna -->
                <VerticalStackLayout Grid.Column="4" HorizontalOptions="Center">
                    <Image Source="iconoestetica.png" WidthRequest="50" HeightRequest="50">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SeleccionarCategoriaCommand}" CommandParameter="{x:Static models:TipoProducto.estetica}" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Label Text="Estética" HorizontalOptions="Center" 
                           FontSize="10"
                           Padding="10"/>
                </VerticalStackLayout>
            </Grid>
            <HorizontalStackLayout>
                <Label
                    Text="Lista"
                    FontSize="18"
                    Margin="20,5,220,0"/>
                <!-- Botón Nuevo -->
                <Image Source="plus1.png"
                       WidthRequest="25"
                       HeightRequest="25"
                       Margin="0"
                       BackgroundColor="Transparent"
                       VerticalOptions="Center" >
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer />
                    </Image.GestureRecognizers>
                </Image>    
            </HorizontalStackLayout>
            
         
       
          <!-- CARD DESLIZABLE DE PRODUCTO -->
          
          <CollectionView ItemsSource="{Binding Productos}">
    <CollectionView.ItemTemplate>
        <DataTemplate>
            <Grid>
                <!-- Fondo al deslizar -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Frame BackgroundColor="red" CornerRadius="20" Margin="5" HeightRequest="110" Grid.Column="0"/>
                    <Frame BackgroundColor="#F17105" CornerRadius="20" Margin="5" HeightRequest="110" Grid.Column="1"/>
                </Grid>

                <SwipeView>
                    <SwipeView.LeftItems>
                        <SwipeItems>
                            <SwipeItem Text="Eliminar"
                                       BackgroundColor="Transparent"
                                       IconImageSource="eliminar1.png"
                                       CommandParameter="{Binding .}" />
                        </SwipeItems>
                    </SwipeView.LeftItems>

                    <SwipeView.RightItems>
                        <SwipeItems>
                            <SwipeItem Text="Editar"
                                       BackgroundColor="Transparent"
                                       IconImageSource="editar1.png"
                                       Command="{Binding BindingContext.SeleccionarCommand, Source={x:Reference PageRef}}"
                                       CommandParameter="{Binding .}" />
                        </SwipeItems>
                    </SwipeView.RightItems>

                  <Frame BackgroundColor="#E4DFDA"
       CornerRadius="20"
       Padding="5"
       Margin="5"
       HeightRequest="110">

    <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center" Padding="5">
        
        <!-- Contenido principal -->
        <StackLayout Grid.Column="0" Padding="10,0" Spacing="2" VerticalOptions="Center">
            <Label Text="{Binding Nombre}" FontAttributes="Bold" TextColor="Black" />
            <Label Text="{Binding Precio, StringFormat='Precio: ${0:F2}'}" FontAttributes="Bold" TextColor="Black" />
            <Label x:Name="StockLabel"
                   Text="{Binding Disponibilidad, StringFormat='Stock: {0}'}" FontAttributes="Bold" TextColor="Black">
                <Label.Triggers>
                    <DataTrigger TargetType="Label" Binding="{Binding Disponibilidad}" Value="5">
                        <Setter Property="TextColor" Value="Red" />
                    </DataTrigger>
                    <DataTrigger TargetType="Label" Binding="{Binding Disponibilidad}" Value="4">
                        <Setter Property="TextColor" Value="Red" />
                    </DataTrigger>
                    <DataTrigger TargetType="Label" Binding="{Binding Disponibilidad}" Value="3">
                        <Setter Property="TextColor" Value="Red" />
                    </DataTrigger>
                    <DataTrigger TargetType="Label" Binding="{Binding Disponibilidad}" Value="2">
                        <Setter Property="TextColor" Value="Red" />
                    </DataTrigger>
                    <DataTrigger TargetType="Label" Binding="{Binding Disponibilidad}" Value="1">
                        <Setter Property="TextColor" Value="Red" />
                    </DataTrigger>
                    <DataTrigger TargetType="Label" Binding="{Binding Disponibilidad}" Value="0">
                        <Setter Property="TextColor" Value="Red" />
                    </DataTrigger>
                </Label.Triggers>
            </Label>
        </StackLayout>

        <!-- Botón alineado a la derecha -->
                                        <Frame Grid.Column="1"
       Padding="0"
       Margin="10,0,20,0"
       BackgroundColor="#FFF"
       BorderColor="#F17105"
       CornerRadius="10"
       HeightRequest="35"
       WidthRequest="90"
       VerticalOptions="Center"
       HorizontalOptions="End">
                                            <HorizontalStackLayout Spacing="0" VerticalOptions="Center" HorizontalOptions="Center">
                                                <Button Text="-" 
                WidthRequest="30"
                HeightRequest="35"
                Padding="0"
                FontSize="18"
                Command="{Binding BindingContext.ReducirCantidadCommand, Source={x:Reference PageRef}}"
                CommandParameter="{Binding .}" />
                                                <Entry Text="{Binding CantidadOperacion, Mode=TwoWay}" 
               WidthRequest="30"
               HorizontalTextAlignment="Center"
               Keyboard="Numeric"
               FontSize="16"
               BackgroundColor="Transparent"/>
                                                <Button Text="+" 
                WidthRequest="30"
                HeightRequest="35"
                Padding="0"
                FontSize="18"
                Command="{Binding BindingContext.AumentarCantidadCommand, Source={x:Reference PageRef}}"
                CommandParameter="{Binding .}" />
                                            </HorizontalStackLayout>
                                        </Frame>


                                    </Grid>
</Frame>

                </SwipeView>
            </Grid>
        </DataTemplate>
    </CollectionView.ItemTemplate>
</CollectionView>

          
          <!---->
</VerticalStackLayout>

    </ScrollView>
</ContentPage>