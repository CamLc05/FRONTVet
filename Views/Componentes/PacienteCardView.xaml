<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Veterinaria.Views.Componentes.PacienteCardView">
    <ScrollView>
    <VerticalStackLayout Padding="10" Spacing="10">

        <!-- CARD DESLIZABLE -->
        <Grid>

            <!-- Fondo visible al deslizar (Eliminar) -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Fondo izquierda (Editar) -->
                <Frame BackgroundColor="red"
                       CornerRadius="20"
                       Margin="9"
                       BorderColor="Transparent"
                       HeightRequest="150"
                       HorizontalOptions="Fill"
                       VerticalOptions="Fill"
                       Grid.Column="0"/>

                <!-- Fondo derecha (Eliminar) -->
                    <Frame BackgroundColor="#7EB2B2"
                       CornerRadius="20"
                       Margin="9"
                       BorderColor="Transparent"
                       HeightRequest="150"
                       HorizontalOptions="Fill"
                       VerticalOptions="Fill"
                       Grid.Column="1"/>
            </Grid>

            <!-- SwipeView encima -->
            <SwipeView>
                <SwipeView.LeftItems>
                    <SwipeItems>
                        <SwipeItem Text="Eliminar"
                                   BackgroundColor="Transparent"
                                   IconImageSource="iconobasura.png"
                                   Invoked="OnEliminarSwipe"
                                   CommandParameter="{Binding Paciente}" /> 
                    </SwipeItems>
                </SwipeView.LeftItems>

                <SwipeView.RightItems>
                    <SwipeItems>
                        <SwipeItem Text="Editar"
                                   BackgroundColor="Transparent"
                                   IconImageSource="iconoeditar.png"
                                   Invoked="OnEditarSwipe"
                                   CommandParameter="{Binding Paciente}" />
                    </SwipeItems>
                </SwipeView.RightItems>

                <!-- Contenido deslizable -->
                <Frame BackgroundColor="#E4DFDA"
                       CornerRadius="20"
                       Padding="0"
                       Margin="0"
                       WidthRequest="350"
                       HeightRequest="150"
                       BorderColor="Transparent">

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnVerPaciente"/> 
                    </Frame.GestureRecognizers>

                    <Grid ColumnDefinitions="Auto,*,Auto"
                          VerticalOptions="Center"
                          Padding="5"
                          RowSpacing="0">

                        <!-- Imagen circular -->
                        <Image Source="{Binding Paciente.FotoSource}"
                               WidthRequest="90"
                               HeightRequest="90"
                               Aspect="AspectFill"
                               HorizontalOptions="Start"
                               VerticalOptions="Center">
                            <Image.Clip>
                                <EllipseGeometry Center="45,45" RadiusX="45" RadiusY="45" />
                            </Image.Clip>
                        </Image>

                        <!-- Información del paciente -->
                        <StackLayout Grid.Column="1"
                                     Padding="10"
                                     Spacing="2"
                                     VerticalOptions="Center">
                            <Label Text="{Binding Nombre}" TextColor="Black"/>
                            
                            <Label Text="Especie:" FontAttributes="Bold" TextColor="Black"/>
                            <Label Text="{Binding Especie}" TextColor="Gray"/>
                            
                            <Label Text="Raza:" FontAttributes="Bold" TextColor="Black"/>
                            <Label Text="{Binding Raza}" TextColor="Gray"/>
                            
                            <Label Text="Propietario:" FontAttributes="Bold" TextColor="Black"/>
                            <Label Text="{Binding Propietario.Nombre}" TextColor="Gray"/>
                            
                        </StackLayout>

                        <!--última columna -->
                            <Image 
                                    Grid.Column="1"
                                    Source="iconomasinfo.png"
                                    HeightRequest="65"
                                    WidthRequest="65"
                                    Margin="10,0,20,0"
                                    VerticalOptions="Center"
                                    HorizontalOptions="End">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnDetallesPaciente" />
                                </Image.GestureRecognizers>
                            </Image>



                        </Grid>
                </Frame>
            </SwipeView>
        </Grid>
    </VerticalStackLayout>
</ScrollView>

</ContentView>
