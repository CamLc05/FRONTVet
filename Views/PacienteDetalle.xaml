<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Veterinaria.Views.PacienteDetalle"
             Title="Detalle del Paciente"
             BackgroundColor="#F5F5F5">
 
    
    <Grid RowDefinitions="Auto,*" Padding="10" Margin="20">
       
        
        <!-- Contenido desplazable -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20" HorizontalOptions="Center" VerticalOptions="Start">
                
                <Grid RowDefinitions="Auto,*" Padding="10" Margin="20">
                    <Grid Padding="10" VerticalOptions="Start" HorizontalOptions="Fill">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />   <!-- Flecha -->
                            <ColumnDefinition Width="*" />      <!-- Logo -->
                            <ColumnDefinition Width="Auto" />   <!-- Botón más -->
                        </Grid.ColumnDefinitions>

                        <!-- Botón Flecha Izquierda -->
                        <Image Source="back1.png"
                               WidthRequest="25"
                               HeightRequest="25"
                               Margin="0"
                               BackgroundColor="Transparent"
                               VerticalOptions="Center"
                               HorizontalOptions="Start"
                               Grid.Column="0"> <!-- ✅ Aquí -->
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Cancelar_Clicked"/>
                            </Image.GestureRecognizers>
                        </Image>    

                        <!-- Logo Centrado -->
                        <Image Source="logovetnegro.png"
                               WidthRequest="170"
                               HeightRequest="80"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Grid.Column="1" /> 

               
                    </Grid>
                </Grid>
             

                <!-- Foto del paciente -->
                <Image Source="{Binding FotoSource}"
                       WidthRequest="150"
                       HeightRequest="150"
                       Aspect="AspectFill"
                       HorizontalOptions="Center">
                    <Image.Clip>
                        <EllipseGeometry Center="75,75" RadiusX="75" RadiusY="75" />
                    </Image.Clip>
                </Image>

                <!-- Nombre -->
                    <Label Text="{Binding Nombre}" FontSize="20" FontAttributes="Bold" Padding="10" HorizontalOptions="Center" />
            

                <!-- Especie -->
                <Label Text="Especie"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="Black"
                   />
                   <Frame BackgroundColor="#E4DFDA"
                                                      CornerRadius="20"
                                                      Padding=" 10">
                    <Label Text="{Binding Especie}" FontSize="16" />
                </Frame>

                <!-- Raza -->
                <Label Text="Raza"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="Black"
                />
                <Frame BackgroundColor="#E4DFDA"
                       CornerRadius="20"
                       Padding="10">
                    <Label Text="{Binding Raza}" FontSize="16" />
                </Frame>

                <!-- Sexo -->
                <Label Text="Sexo"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="Black"
                />
                <Frame BackgroundColor="#E4DFDA"
                       CornerRadius="20"
                       Padding="10">
                    <Label Text="{Binding Sexo}" FontSize="16" />
                </Frame>

                <!-- Fecha de nacimiento -->
                <Label Text="Fecha de nacimiento"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="Black"
                />
                <Frame BackgroundColor="#E4DFDA"
                       CornerRadius="20"
                       Padding="10">
                    <Label Text="{Binding FechaNacimiento}" FontSize="16" />
                </Frame>

                <!-- Padecimiento -->
                <Label Text="Padecimiento"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="Black"
                />
                <Frame BackgroundColor="#E4DFDA"
                       CornerRadius="20"
                       Padding="10">
                    <Label Text="{Binding Padecimiento}" FontSize="16" />
                </Frame>

                <!-- Propietario -->
                <Label Text="Propietario"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="Black"
                />
                <Frame BackgroundColor="#E4DFDA"
                       CornerRadius="20"
                       Padding="10">
                    <Label Text="{Binding Propietario.Nombre}" FontSize="16" />
                </Frame>

                <!-- Citas -->
                <Label Text="Citas"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="Black"
                />
                <Frame BackgroundColor="#E4DFDA"
                       CornerRadius="20"
                       Padding="10">
                    <Label Text="{Binding Citas}" FontSize="16" />
                </Frame>

                <!-- Intervenciones -->
                <Label Text="Intervenciones"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="Black"
                />
                <Frame BackgroundColor="#E4DFDA"
                       CornerRadius="20"
                       Padding="10">
                    <Label Text="{Binding Intervenciones}" FontSize="16" />
                </Frame>

                <!-- Vacunas -->
                <Label Text="Vacunas"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="Black"
                />
                <Frame BackgroundColor="#E4DFDA"
                       CornerRadius="20"
                       Padding="10">
                    <Label Text="{Binding Vacunas}" FontSize="16" />
                </Frame>

            </VerticalStackLayout>
        </ScrollView>
        
        
        <!---boton izquierda-->
        <ImageButton Source="back.png"
                     WidthRequest="30"
                     HeightRequest="30"
                     Margin="10"
                     BackgroundColor="Transparent"
                     Clicked="OnVolverClicked"
                     HorizontalOptions="Start"
                     VerticalOptions="Start" />
    </Grid>
      
 
</ContentPage>